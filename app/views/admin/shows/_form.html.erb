<%= form_with model: [:admin, @show], class: "stack" do |form| %>
  <% if @show.errors.any? %>
    <div class="alert">
      <strong><%= pluralize(@show.errors.count, "error") %> prevented saving:</strong>
      <ul>
        <% @show.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :emoji %>
    <%= form.text_field :emoji, placeholder: "e.g. ğŸ“º" %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4 %>
  </div>

  <div class="actions">
    <%= form.submit "Save show", class: "button" %>
    <%= link_to "Cancel", admin_shows_path, class: "link" %>
  </div>
<% end %>
